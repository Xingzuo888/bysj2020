<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    app:qmui_backgroundColor="@color/white"
    app:qmui_borderWidth="0dp"
    app:qmui_radius="20dp">

    <com.qmuiteam.qmui.widget.QMUIRadiusImageView
        android:id="@+id/item_favorite_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/default_picture"
        app:qmui_corner_radius="10dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_favorite_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/item_favorite_img"
        android:ellipsize="end"
        android:lines="2"
        android:text="七天连锁店"
        android:textColor="@color/black_3"
        android:textSize="18dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_favorite_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_favorite_name"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/item_favorite_img"
        android:text="收藏时间：2020-01-01"
        android:textColor="@color/gray_6"
        android:textSize="15dp" />
</com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout>