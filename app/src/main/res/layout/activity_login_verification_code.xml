<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    tools:context=".activity.LoginVerificationCode">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fitsSystemWindows="true">

        <include layout="@layout/toolbar" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/login_vc_logo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.25"
            app:srcCompat="@mipmap/default_avatar" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/login_vc_phone_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_vc_logo">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/login_vc_ed_phone"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawableLeft="@mipmap/phone"
                android:drawablePadding="10dp"
                android:hint="请输入您的手机号"
                android:inputType="number"
                android:maxLength="11"
                android:paddingBottom="20dp"
                android:textColor="#070707"
                android:textColorHint="@color/gray_c"
                android:textCursorDrawable="@drawable/edit_cursor"
                android:textSize="16dp"
                android:theme="@style/MyEditText"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/login_vc_img_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@mipmap/icon_close"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/login_vc_code_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_vc_phone_layout">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/login_vc_ed_code"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawableLeft="@mipmap/code"
                android:drawablePadding="10dp"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="6"
                android:paddingBottom="20dp"
                android:textColor="#070707"
                android:textColorHint="@color/gray_c"
                android:textCursorDrawable="@drawable/edit_cursor"
                android:textSize="16dp"
                android:theme="@style/MyEditText"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/login_vc_tv_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="获取验证码"
                android:textColor="@color/gray_b"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login_vc_login_btn"
            style="@style/button_submit"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:text="登录"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_vc_code_layout"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/login_vc_loginPassword_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:text="密码登录"
            android:textColor="@color/black_3"
            android:textSize="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_vc_login_btn" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="登录/注册即视为同意《用户服务协议》"
            android:textColor="@color/gray_a"
            android:textSize="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/login_vc_loginPassword_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>