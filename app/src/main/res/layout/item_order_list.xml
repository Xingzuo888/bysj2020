<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@color/white"
    android:padding="10dp">

    <com.qmuiteam.qmui.widget.QMUIRadiusImageView
        android:id="@+id/item_orderList_img"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@mipmap/default_picture"
        app:qmui_corner_radius="5dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_orderList_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/item_orderList_img"
        android:ellipsize="end"
        android:lines="1"
        android:text="七天连锁"
        android:textColor="@color/black_3"
        android:textSize="18dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_orderList_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_orderList_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/item_orderList_img"
        android:text="单人间"
        android:textColor="@color/black_3"
        android:textSize="15dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_orderList_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_orderList_type"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/item_orderList_img"
        android:text="￥200"
        android:textColor="#F70404"
        android:textSize="15dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_orderList_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:padding="5dp"
        android:text="已预订"
        android:textSize="15dp" />
</RelativeLayout>